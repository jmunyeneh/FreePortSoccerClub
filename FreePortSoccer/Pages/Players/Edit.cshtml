@page
@model FreePortSoccer.Pages.Players.EditModel

@{
    Layout = "_Layout2";
    ViewData["Title"] = "Edit";  
}

<h1>Edit</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Player.PlayerId" />
            <div class="form-group">
                <label asp-for="Player.JerseyNo" class="control-label"></label>
                <input asp-for="Player.JerseyNo" class="form-control" />
                <span asp-validation-for="Player.JerseyNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.PlayerName" class="control-label"></label>
                <input asp-for="Player.PlayerName" class="form-control" />
                <span asp-validation-for="Player.PlayerName" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="Player.DOB" class="control-label"></label>
                <input asp-for="Player.DOB" class="form-control" />
                <span asp-validation-for="Player.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Age" class="control-label"></label>
                <input asp-for="Player.Age" class="form-control" />
                <span asp-validation-for="Player.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.PlayingClub" class="control-label"></label>
                <input asp-for="Player.PlayingClub" class="form-control" />
                <span asp-validation-for="Player.PlayingClub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" asp-for="Image" class="custom-file-input" id="inputGroupFile02">                       
                        <label class="custom-file-label" for="inputGroupFile02">Choose image</label>
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text" id="">Upload</span>
                    </div>
                </div>
            </div>
        
            <div class="form-group">
                <label asp-for="Player.PositionId" class="control-label"></label>
                <select asp-for="Player.PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                <span asp-validation-for="Player.PositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
