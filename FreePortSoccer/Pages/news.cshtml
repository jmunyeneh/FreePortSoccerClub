@page
@using FreePortSoccer.Models
@{
    var news = await NewsService.GetAllAsync();  
}

<div class="site-blocks-cover overlay" style="background-image: url(images/hero_bg_3.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-md-6 text-center text-md-left" data-aos="fade-up" data-aos-delay="400">
                <h1 class="bg-text-line">News</h1>
                <p class="mt-4"></p>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            @foreach (var n in news)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="post-entry">
                        <div class="image">
                            <img src="@n.GetInlineImageSrc()" alt="Image" class="img-fluid">
                        </div>
                        <div class="text p-4">
                            <h2 class="h5 text-black"><a asp-page="./NewArticle/Details" asp-route-id="@n.Id">@n.Title</a></h2>
                            <span class="text-uppercase date d-block mb-3"><small>By @n.Author; @n.InsertedDate</small></span>
                            <p class="mb-0" style="width:280px; white-space:nowrap;overflow:hidden;text-overflow:ellipsis">@n.Article</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    
        <div class="row">        
            <div class="col-md-12 text-center">
                <div class="site-block-27">
                    <ul>                        
                       <li><a href="#">&lt;</a></li>
                       <li class="active"><span>1</span></li>
                       <li><a href="#">2</a></li>
                       <li><a href="#">3</a></li>
                       <li><a href="#">4</a></li>
                       <li><a href="#">5</a></li>
                       <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>

